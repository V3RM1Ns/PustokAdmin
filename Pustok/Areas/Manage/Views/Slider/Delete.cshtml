@model Pustok.Models.Slider

@{
    ViewData["Title"] = "Slider Sil";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Slider Sil</h1>
    <a asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> Geri Dön
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-danger text-white">
        <h6 class="m-0 font-weight-bold">Bu slider'ı silmek istediğinizden emin misiniz?</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">ID:</dt>
            <dd class="col-sm-10">@Model.Id</dd>
            
            <dt class="col-sm-2">Başlık:</dt>
            <dd class="col-sm-10">@Model.Title</dd>
            
            <dt class="col-sm-2">Açıklama:</dt>
            <dd class="col-sm-10">@Model.Description</dd>
            
            <dt class="col-sm-2">Resim:</dt>
            <dd class="col-sm-10">
                <img src="~/image/@Model.Image" alt="@Model.Title" class="img-thumbnail" style="max-width: 200px;" />
            </dd>
        </dl>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Evet, Sil
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> İptal
            </a>
        </form>
    </div>
</div>
