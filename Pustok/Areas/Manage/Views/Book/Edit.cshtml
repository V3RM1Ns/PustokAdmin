@model Pustok.Models.Book

@{
    ViewData["Title"] = "Kitap Düzenle";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Kitap Düzenle</h1>
    <a asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> Geri Dön
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kitap Bilgilerini Düzenle</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label">Kitap Başlığı</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="AuthorId" class="control-label">Yazar</label>
                        <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.AuthorId">
                            <option value="">-- Yazar Seçin --</option>
                        </select>
                        <span asp-validation-for="AuthorId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Açıklama</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="MainImage" class="control-label">Ana Resim URL</label>
                        <input asp-for="MainImage" class="form-control" />
                        <span asp-validation-for="MainImage" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="HoverImage" class="control-label">Hover Resim URL</label>
                        <input asp-for="HoverImage" class="form-control" />
                        <span asp-validation-for="HoverImage" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="GenreId" class="control-label">Kategori</label>
                        <select asp-for="GenreId" class="form-control" asp-items="ViewBag.GenreId">
                            <option value="">-- Kategori Seçin --</option>
                        </select>
                        <span asp-validation-for="GenreId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Price" class="control-label">Fiyat (₺)</label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DiscountPrice" class="control-label">İndirim Oranı (%)</label>
                        <input asp-for="DiscountPrice" class="form-control" type="number" />
                        <span asp-validation-for="DiscountPrice" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="InStock" type="checkbox" />
                        <label class="form-check-label" asp-for="InStock">
                            Stokta Var
                        </label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="IsFeatured" type="checkbox" />
                        <label class="form-check-label" asp-for="IsFeatured">
                            Öne Çıkan
                        </label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="IsNew" type="checkbox" />
                        <label class="form-check-label" asp-for="IsNew">
                            Yeni
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
