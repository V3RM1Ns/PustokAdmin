@model IEnumerable<Pustok.Models.Book>

@{
    ViewData["Title"] = "Kitaplar Yönetimi";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Kitaplar Yönetimi</h1>
    <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Yeni Kitap Ekle
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kitaplar Listesi</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Başlık</th>
                        <th>Yazar</th>
                        <th>Kategori</th>
                        <th>Fiyat</th>
                        <th>Stok</th>
                        <th>Öne Çıkan</th>
                        <th>Yeni</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Author?.Name</td>
                            <td>@item.Genre?.Name</td>
                            <td>₺@item.Price</td>
                            <td>
                                @if(item.InStock)
                                {
                                    <span class="badge badge-success">Stokta</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Stok Yok</span>
                                }
                            </td>
                            <td>
                                @if(item.IsFeatured)
                                {
                                    <span class="badge badge-primary">Evet</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Hayır</span>
                                }
                            </td>
                            <td>
                                @if(item.IsNew)
                                {
                                    <span class="badge badge-info">Evet</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Hayır</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Düzenle
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Detay
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
